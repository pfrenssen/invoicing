<?php

/**
 * @file
 * Base class for integration tests for the invoicing platform.
 */

module_load_include('inc', 'test_traits', 'base');
module_load_include('inc', 'test_traits', 'business');
module_load_include('inc', 'test_traits', 'client');
module_load_include('inc', 'test_traits', 'line_item');

class InvoicingIntegrationTestCase extends DrupalWebTestCase {

  use BaseTestHelper;
  use BusinessTestHelper;
  use ClientTestHelper;
  use LineItemTestHelper;

  /**
   * {@inheritdoc}
   */
  protected $profile = 'invoicing';

  /**
   * Test user accounts.
   *
   * @var array
   *   An array of user objects.
   */
  protected $users;

  /**
   * A list of roles for which to create a user.
   *
   * @var array
   *   The names of the roles for which to create a user.
   */
  protected $usersToCreate = array(
    'administrator',
    'authenticated user',
    'business owner',
    'client',
  );

  /**
   * {@inheritdoc}
   */
  protected function setUp() {
    parent::setUp();

    // Create the requested user accounts.
    foreach ($this->usersToCreate as $role) {
      $this->users[$role] = $this->drupalCreateUserWithRole($role);
    }

    // If a business user was created, also create a business.
    if (in_array('business owner', $this->usersToCreate)) {
      $business = $this->createBusiness();
      $business->save();
      $this->addBusinessToUser($business, $this->users['business owner']);
    }
  }

}
