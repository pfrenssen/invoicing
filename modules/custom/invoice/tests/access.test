<?php

/**
 * @file
 * Access tests for the Invoice module.
 */

module_load_include('inc', 'test_traits', 'base');
module_load_include('inc', 'test_traits', 'invoice');

class InvoiceAccessTestCase extends DrupalWebTestCase {
  use BaseTestHelper;
  use InvoiceTestHelper;

  /**
   * A user with administrator permissions.
   *
   * @var object
   */
  protected $administrator;

  /**
   * A user without any relevant permissions.
   *
   * @var object
   */
  protected $authenticatedUser;

  /**
   * A test invoice.
   *
   * @var Invoice
   */
  protected $invoice;

  /**
   * {@inheritdoc}
   */
  protected $profile = 'testing';

  /**
   * Returns test case metadata.
   */
  public static function getInfo() {
    return array(
      'name' => 'Access tests',
      'description' => 'Tests permissions.',
      'group' => 'Invoice',
    );
  }

  /**
   * {@inheritdoc}
   */
  protected function setUp() {
    parent::setup('client', 'invoice');

    // Create test users.
    $permissions = array('administer invoices', 'administer clients');
    $this->administrator = $this->drupalCreateUser($permissions);
    $this->authenticatedUser = $this->drupalCreateUser();

    // Create an invoice.
    $this->invoice = $this->createInvoice();
    debug($this->invoice);
    $this->invoice->save();
  }

  /**
   * Tests the 'administer invoices' permission.
   */
  public function testAdministerInvoicesPermission() {
    // Log in as administrator.
    $this->drupalLogin($this->administrator);

    // Check if the administrator has access to all pages.
    $paths = array(
      'invoice/add',
      'invoice/' . $this->invoice->identifier() . '/edit',
      'invoice/' . $this->invoice->identifier() . '/delete',
    );

    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(200, format_string('A user with permissions "administer invoices" can access the %path page.', array('%path' => $path)));
    }

    // Check if the administrator can see the 'Delete' button on the edit page.
    $this->drupalGet('invoice/' . $this->invoice->identifier() . '/edit');
    $this->assertXPathElements('//input[@id="edit-delete"]', 1, array(), 'A user with permission "administer invoices" can see the delete button on the invoice edit page.');

    // Log in as the user without permissions.
    $this->drupalLogin($this->authenticatedUser);

    // Check that access is denied on all invoice paths.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('A user without permission "administer invoices" can not access the %path page.', array('%path' => $path)));
    }

    // Log out.
    $this->drupalLogout();

    // Check that access is denied on all invoice paths for an anonymous user.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('An anonymous user can not access the %path page.', array('%path' => $path)));
    }
  }

}
