    'foreign keys' => array(
      'bid' => array(
        'table' => 'business',
        'columns' => array('bid' => 'bid'),
      ),
    ),
    'indexes' => array(
      'type' => array('type'),
    ),
  );

  $schema['invoice_type'] = array(
