<?php

/**
 * @file
 * Access and permission tests for the 'anonymous user' role.
 */

module_load_include('inc', 'test_traits', 'base');
module_load_include('inc', 'test_traits', 'business');
module_load_include('inc', 'test_traits', 'client');
module_load_include('inc', 'test_traits', 'invoice');

class AnonymousUserPathAccessTestCase extends AccessWebTestCase {

  use BaseTestHelper;
  use BusinessTestHelper;
  use ClientTestHelper;
  use InvoiceTestHelper;

  /**
   * {@inheritdoc}
   */
  protected $role = 'anonymous';

  /**
   * {@inheritdoc}
   */
  protected $accessiblePaths = array(
    'user',
    'user/password',
    'user/register',
  );

  /**
   * {@inheritdoc}
   */
  protected $inaccessiblePaths = array(
    '<front>',
    'admin',
    'admin/config',
    'admin/config/people',
    'admin/content',
    'admin/people',
    'admin/reports',
    'admin/structure',
    'businesses',
    'business/add',
    'clients',
    'client/add',
    'dashboard',
    'invoice/add',
    'line_item/add',
    'line_item/add/product',
    'line_item/add/service',
    'node',
    'node/add',
  );

  /**
   * A test business.
   *
   * @var Business
   */
  protected $business;

  /**
   * A test client.
   *
   * @var Client
   */
  protected $client;

  /**
   * A test invoice.
   *
   * @var Invoice
   */
  protected $invoice;

  /**
   * Returns test case metadata.
   */
  public static function getInfo() {
    return array(
      'name' => 'Anonymous user',
      'description' => 'Tests access permissions for the "anonymous user" role.',
      'group' => 'Invoicing - Access',
    );
  }

  /**
   * {@inheritdoc}
   */
  public function setUp() {
    parent::setUp();

    // Create a business.
    $this->business = $this->createBusiness();
    $this->business->save();

    // Add the paths to view, edit and delete the business. These should all be
    // inaccessible.
    $this->inaccessiblePaths[] = 'business/' . $this->business->identifier();
    $this->inaccessiblePaths[] = 'business/' . $this->business->identifier() . '/edit';
    $this->inaccessiblePaths[] = 'business/' . $this->business->identifier() . '/delete';

    // Add a client to the business. This should also be inaccessible.
    $this->client = $this->createClient(array('bid' => $this->business->identifier()));
    $this->client->save();
    $this->inaccessiblePaths[] = 'client/' . $this->client->identifier();
    $this->inaccessiblePaths[] = 'client/' . $this->client->identifier() . '/edit';
    $this->inaccessiblePaths[] = 'client/' . $this->client->identifier() . '/delete';

    // Add an invoice to the business. This should also be inaccessible.
    $this->invoice = $this->createInvoice(array(
      'bid' => $this->business->identifier(),
      'field_invoice_client' => $this->client,
    ));
    $this->invoice->save();
    $this->inaccessiblePaths[] = 'invoice/' . $this->invoice->identifier();
    $this->inaccessiblePaths[] = 'invoice/' . $this->invoice->identifier() . '/edit';
    $this->inaccessiblePaths[] = 'invoice/' . $this->invoice->identifier() . '/delete';
  }

  /**
   * {@inheritdoc}
   */
  public function setupUser() {
    // Do not log in a user, we're testing an anonymous visitor.
  }

}
