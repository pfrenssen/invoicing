<?php

/**
 * @file
 * Access tests for the Client module.
 */

class ClientAccessTestCase extends ClientWebTestCase {

  /**
   * A user with administrator permissions.
   *
   * @var object
   */
  protected $administrator;

  /**
   * A user without any relevant permissions.
   *
   * @var object
   */
  protected $authenticatedUser;

  /**
   * A test client.
   *
   * @var Client
   */
  protected $client;

  /**
   * Returns test case metadata.
   */
  public static function getInfo() {
    return array(
      'name' => 'Access tests',
      'description' => 'Tests permissions.',
      'group' => 'Client',
    );
  }

  /**
   * {@inheritdoc}
   */
  protected function setUp() {
    parent::setup('client');

    // Create test users.
    $permissions = array('administer clients');
    $this->administrator = $this->drupalCreateUser($permissions);
    $this->authenticatedUser = $this->drupalCreateUser();

    // Create a client.
    $this->client = $this->createClient();
    $this->client->save();
  }

  /**
   * Tests the 'administer clients' permission.
   */
  public function testAdministerClientsPermission() {
    // Log in as administrator.
    $this->drupalLogin($this->administrator);

    // Check if the administrator has access to all pages.
    $paths = array(
      'clients',
      'client/add',
      'client/' . $this->client->identifier() . '/edit',
      'client/' . $this->client->identifier() . '/delete',
    );

    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(200, format_string('A user with permission "administer clients" can access the %path page.', array('%path' => $path)));
    }

    // Check if the administrator can see the 'Delete' button on the edit page.
    $this->drupalGet('client/' . $this->client->identifier() . '/edit');
    $this->assertXPathElements('//input[@id="edit-delete"]', 1, array(), 'A user with permission "administer clients" can see the delete button on the client edit page.');

    // Log in as the user without permissions.
    $this->drupalLogin($this->authenticatedUser);

    // Check that access is denied on all client paths.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('A user without permission "administer clients" can not access the %path page.', array('%path' => $path)));
    }

    // Log out.
    $this->drupalLogout();

    // Check that access is denied on all client paths for an anonymous user.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('An anonymous user can not access the %path page.', array('%path' => $path)));
    }
  }

}
