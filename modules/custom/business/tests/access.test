<?php

/**
 * @file
 * Access tests for the Business module.
 */

class BusinessAccessTestCase extends DrupalWebTestCase {

  /**
   * A user with administrator permissions.
   *
   * @var object
   */
  protected $administrator;

  /**
   * A user without any relevant permissions.
   *
   * @var object
   */
  protected $authenticatedUser;

  /**
   * A test business.
   *
   * @var Business
   */
  protected $business;

  /**
   * {@inheritdoc}
   */
  protected $profile = 'testing';

  /**
   * Returns test case metadata.
   */
  public static function getInfo() {
    return array(
      'name' => 'Access tests',
      'description' => 'Tests permissions.',
      'group' => 'Business',
    );
  }

  /**
   * {@inheritdoc}
   */
  protected function setUp() {
    parent::setup('business');

    module_load_include('inc', 'test_traits', 'business');
    module_load_include('inc', 'test_traits', 'base');

    // Create test users.
    $permissions = array('administer businesses');
    $this->administrator = $this->drupalCreateUser($permissions);
    $this->authenticatedUser = $this->drupalCreateUser();

    // Create a business.
    $this->business = $this->createBusiness();
    $this->business->save();
  }

  /**
   * Tests the 'administer businesses' permission.
   */
  public function testAdministerBusinessesPermission() {
    // Log in as administrator.
    $this->drupalLogin($this->administrator);

    // Check if the administrator has access to all pages.
    $paths = array(
      'business/add',
      'business/' . $this->business->identifier() . '/edit',
      'business/' . $this->business->identifier() . '/delete',
    );

    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(200, format_string('A user with permission "administer businesses" can access the %path page.', array('%path' => $path)));
    }

    // Check if the administrator can see the 'Delete' button on the edit page.
    $this->drupalGet('business/' . $this->business->identifier() . '/edit');
    $this->assertXPathElements('//input[@id="edit-delete"]', 1, array(), 'A user with permission "administer businesses" can see the delete button on the business edit page.');

    // Log in as the user without permissions.
    $this->drupalLogin($this->authenticatedUser);

    // Check that access is denied on all business paths.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('A user without permission "administer businesses" can not access the %path page.', array('%path' => $path)));
    }

    // Log out.
    $this->drupalLogout();

    // Check that access is denied on all business paths for an anonymous user.
    foreach ($paths as $path) {
      $this->drupalGet($path);
      $this->assertResponse(403, format_string('An anonymous user can not access the %path page.', array('%path' => $path)));
    }
  }

}
